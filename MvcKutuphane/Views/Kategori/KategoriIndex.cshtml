@using MvcKutuphane.Models.Entity
@model List<TBLKategory>
@{
    ViewBag.Title = "KategoriIndex";
    Layout = "~/Views/Shared/View.cshtml";
}

<h2>Kategoriler</h2>


<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Ad</th>
        <th>Sil</th>
        <th>Güncelleme</th>
    </tr>

    
    @foreach (var ktgr in Model)
    {
        <tr>
            <td>@ktgr.Id</td>
            <td>@ktgr.Ad</td>
            <td><a href="/Kategori/KtgrSil/@ktgr.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KtgrGetirIndex/@ktgr.Id"  class="btn btn-success">Güncelle</a></td>
        </tr>

    }

</table>
<a href="~/Kategori/KtgEkleIndex" class="btn btn-primary ">Yeni Kategori Ekle</a>

@model MvcKutuphane.Models.Entity.TBLKitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/View.cshtml";
}


@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>KitapID</label>
            @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.Ad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBLKategory.Id, (List<SelectListItem>)ViewBag.dgr1,
      new { @class = "form-control" })

        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar Adı </label>
            @Html.DropDownListFor(k => k.TBLYazarlar.Id, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Basım Yılı </label>
            @Html.TextBoxFor(k => k.Basimyill, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yayınevi  </label>
            @Html.TextBoxFor(k => k.Yayınevi, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Sayfa Sayısı  </label>
            @Html.TextBoxFor(k => k.Sayfa, new { @class = "form-control" })
        </div>
        
        <button class=" btn btn-warning">Yazar Bilgilerini Güncelle</button>
    </div>
}



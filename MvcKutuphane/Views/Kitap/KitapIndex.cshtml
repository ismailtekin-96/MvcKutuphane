@using MvcKutuphane.Models.Entity
@model List<TBLKitap>
@{
    ViewBag.Title = "KitapIndex";
    Layout = "~/Views/Shared/View.cshtml";
}


@using (Html.BeginForm("KitapIndex", "Kitap", FormMethod.Get))
{
    <div style="margin-top: 15px; margin-bottom:15px">
        <b>Aranacak Kitap Adını Girin: </b>@Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazar</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Id</td>
            <td>@k.Ad</td>
            <td>@k.TBLYazarlar.Ad &nbsp;@k.TBLYazarlar.Soyad</td>
            <td>@k.TBLKategory.Ad</td>
            <td>@k.Basimyill</td>
            <td>@k.Yayınevi</td>
            <td>@k.Sayfa</td>
            <td>@k.Durum</td>
            <td><a href="/Kitap/KitapSil/@k.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.Id" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Kitap/KtpEkleIndex" class="btn btn-primary ">Yeni Kitap Ekle</a>




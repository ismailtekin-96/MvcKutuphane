@using MvcKutuphane.Models.Entity
@model List<TBLYazarlar>
    @{
        ViewBag.Title = "YazarIndex";
        Layout = "~/Views/Shared/View.cshtml";


}

    <h2>YAZARLAR</h2>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Detay</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var y in Model) 
        {
    <tr>
        <td>@y.Id</td>
        <td>@y.Ad</td>
        <td>@y.Soyad</td>
        <td>@y.Detay</td>
        <td>@Html.ActionLink("Sil","YazarSil", new {id = y.Id },new {@class="btn btn-danger",
          onclick="return confirm('Silmek İstiyormusunuz?')"})</td>
        <td><a href="/Yazar/YazarGetir/@y.Id" class="btn btn-success">Güncelle</a></td> 
    </tr>
        }
    </table>
<a class="btn btn-primary" href="/Yazar/YazarEkle">Yeni Yazar Ekle</a>

